@using CarRental.API.Models.DTO;
@model EditLocationRequest
@{

}

<div>
	<h1>Edit Location</h1>
</div>

<div class="container py-5">
	@if (Model != null)
	{
		<form method="post">
			<div class="mb-3">
				<label class="form-label">Id</label>
				<input type="text" class="form-control" id="id" asp-for="Id" readonly />
			</div>
			<div class="mb-3">
				<label class="form-label">Name</label>
				<input type="text" class="form-control" id="name" asp-for="Name" />
			</div>
			<div class="mb-3">
				<label class="form-label">City</label>
				<input type="text" class="form-control" id="city" asp-for="City" />
			</div>
			<div class="mb-3">
				<label class="form-label">Street</label>
				<input type="text" class="form-control" id="street" asp-for="Street" />
			</div>
			<div class="mb-3">
				<label class="form-label">Phone</label>
				<input type="text" class="form-control" id="phone" asp-for="Phone" />
			</div>

			<div class="mb-3">
				<div class="d-flex">
					<button type="submit" class="btn btn-dark">Update</button>
				</div>
			</div>
		</form>
	}
	else
	{
		<p>Model not found!</p>
	}
</div>