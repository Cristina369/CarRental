@using CarRental.API.Models.DTO;
@model AddLocationRequest
@{

}

<div>
	<h1>Add Location</h1>
</div>

<div class="container py-5">
	<form method="post">
		<div class="mb-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" id="name" asp-for="Name" />
		</div>
		<div class="mb-3">
			<label class="form-label">City</label>
			<input type="text" class="form-control" id="city" asp-for="City" />
		</div>
		<div class="mb-3">
			<label class="form-label">Street</label>
			<input type="text" class="form-control" id="street" asp-for="Street" />
		</div>
		<div class="mb-3">
			<label class="form-label">Phone</label>
			<input type="text" class="form-control" id="phone" asp-for="Phone" />
		</div>
		<div class="mb-3">
			<button type="submit" class="btn btn-dark">Submit</button>
		</div>
	</form>
</div>