@using CarRental.API.Models.DTO;
@model EditModelRequest
@{

}

<div>
	<h1>Edit Model</h1>
</div>

<div class="container py-5">
	@if (Model != null)
	{
		<form method="post">
			<div class="mb-3">
				<label class="form-label">Id</label>
@* 				<input type="text" class="form-control" id="id" asp-for="Id" readonly />
 *@			</div>
			<div class="mb-3">
				<label class="form-label">Name</label>
				<input type="text" class="form-control" id="name" asp-for="Name" />
			</div>
			<div class="mb-3">
				<label class="form-label">Description</label>
				<input type="text" class="form-control" id="description" asp-for="Description" />
			</div>
			<div class="mb-3">
				<label class="form-label">Makes</label>
				<select class="form-select" asp-items="@Model.Makes" asp-for="MakeId"></select>
			</div>
			<div class="mb-3">
				<div class="d-flex">
					<button type="submit" class="btn btn-dark">Update</button>
					<button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="Model" asp-action="Delete">Delete</button>
				</div>
			</div>
		</form>
	}
	else
	{
		<p>Model not found!</p>
	}
</div>